{% extends 'base.html.twig' %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <ul>
                {% for season in seasons %}
                    <li> <a href="{{ path('show_season', { 'id': season.id }) }}"> Saison : {{ season.number }} </a> ({{ season.year }})</li>
                {% endfor %}
            </ul>
            <strong>Acteur :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('show_actor',{'id' : actor.id}) }}">{{ actor.name }}</a> </li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <a href=" {{ path('wild_index') }}">Retour à l'index</a></br>
            <a href="{{ path('app_index') }}">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}